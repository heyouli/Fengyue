<div class="index-content">
  <p id="notice"><%= notice %></p>
  <h1>Products</h1>
    <div class="container-fluid">
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-12 col-md-6 col-lg">
          <div  class="productgallery-image"><%= image_tag(product.image_url, class: "img-fluid") %></div>
          <div class="productgallery-info">
            <a href="#"><p class="productgallery-name"><%= product.name %></p></a>
            <p class="productgallery-decription"><%= product.description %></p>
            <p class="productgallery-color">Color: <%= product.colour %></p>
            <p class="productgallery-price"><%= product.price %>â‚¬</p>
          </div>

          <div class="productgallery-edit">
            <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <p class="horizontal-line"><%= link_to 'Show', product %></p>
            <p class="horizontal-line"><%= link_to 'Edit', edit_product_path(product) %></p>
          </div>
        </div><!-- /col -->
        <% end %>
      </div>
    </div>

    <br>
      <%= link_to 'New Product', new_product_path, :class => "new-product" %>

</div>
