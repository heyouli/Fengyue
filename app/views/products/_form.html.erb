<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group product-form">
    <%= form.label :name, class:"product-edit-title" %>
    <%= form.text_field :name, class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= form.label :description, class:"product-edit-title" %>
    <%= form.text_area :description, class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= form.label :image_url, class:"product-edit-title" %>
    <%= form.text_field :image_url, class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= form.label :colour, class:"product-edit-title" %>
    <%= form.text_field :colour, class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= form.label :price, class:"product-edit-title" %>
    <%= form.text_field :price, class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= form.submit 'Submit', class:"btn btn-light product_create" %>
  </div>
<% end %>
