  <div  class="product-gallery-image"><%= image_tag(product.image_url, class: "img-fluid") %></div>
  <div class="product-gallery-info">
    <p class="product-gallery-name"><%= link_to product.name, product %></p>
    <p class="product-gallery-decription"><%= product.description %></p>
    <p class="product-gallery-color">Color: <%= product.colour %></p>
    <p class="product-gallery-price"><%= product.price %>â‚¬</p>
  </div>
  <div class="product-gallery-edit">
    <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <p class="horizontal-line"><%= link_to 'Show', product %></p>
    <p class="horizontal-line"><%= link_to 'Edit', edit_product_path(product) %></p>
  </div>
</div><!-- /col -->
