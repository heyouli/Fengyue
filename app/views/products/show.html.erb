<div class="index-content">
  <div class="container">
  <div class="row">

    <div class="col-sm-12 col-lg-6">
      <%= image_tag(@product.image_url, class: "img-fluid") if @product.image_url%>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>

    <div class="col-sm-12 col-lg-6">
      <p class="productname-show">
        <%= @product.name %>
      </p>
      <p class="product-gallery-decription">
        <%= @product.description %>
      </p>
      <p class="text-bold">Overview</p>
      <p class="product-gallery-decription">
        Color: <%= @product.colour %>
      </p>
      <p class="product-galleryprice-tag">
        <%= number_to_currency(@product.price, :unit => "â‚¬") %>
      </p>
      <div class="star-rating">
        <div class="rated star-rating" data-score="<%= @product.average_rating %>">
        </div>
        <% if !@product.highest_rating_comment.nil? %>
        <%= @product.highest_rating_comment.body %>
        <% end %>
      </div>
      <%= form_with(url: '/payments/create') do |form| %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>
        <%= render 'new_comment' %>
      </div>

      <div class="col-lg-12 product-comments">
        <%= render 'comments' %>
        <%= will_paginate @comments %>
    </div>

</div>
</div>
</div>
