<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <p class"productcomments-user"><%= comment.user.first_name %><br> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <div class="rated productcomments-star" data-score="<%= comment.rating %>"></div>
            <p class"productcomments-text"><%= comment.body %></p>
        </div>
    <% end %>
</div>
