<div class="index-content">
  <h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form signin-form">
    <%= f.label :email, class:"productedit-title" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email adress", class:"form-control signin-field" %>
  </div>

  <div class="actions signin-form">
    <%= f.submit "Send me reset password instructions", class:"btn btn-light product_create" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
