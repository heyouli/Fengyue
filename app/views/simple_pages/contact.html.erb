<div class="contact-content">
  <h1>Contact Fengy√º</h1>

  <!-- Contact Grid -->
  <div class="container-fluid">
    <div class="row">

      <div class="col-lg-6 col-sm-12">
        <div class="centermail">
          <p class="contact-text">We are always happy to hear from you. Send us an email to <a href="mailto:info@feng-yue.de?subject=Hello">info@feng-yue.de</a> or call us at +49-176-83&thinsp;51&thinsp;74&thinsp;16.</p>
        </div><!-- end adress, email -->
      </div>

      <div class="col-lg-6 col-sm-12">
        <form class="centermail">
          <div class="form-group form_row_one">
            <label for="Name" class="contact-label">Name*</label>
            <input type="text" id="Name" placeholder="Your name" class="form-control" >
          </div><!-- end form-group Name-->
        <div class="form-group form_row_one">
          <label for="Phone" class="contact-label">Phone</label>
          <input type="tel" id="Phone" placeholder="Your phone number" class="form-control">
        </div><!-- end form-group Phone-->
        <div class="form-group">
          <label for="Email" class="contact-label">Email*</label>
          <input type="email" id="Email" placeholder="Your email" class="form-control email-box" >
        </div><!-- end form-group Email-->
        <label for="message" class="contact-label">Message*</label>
        <textarea style="resize:none" cols="40" rows="5" placeholder="Your message" id="message" class="message_box form-control"></textarea>
          <p id=visible-comment></p>
          <p id=char_count></p>
          <p id=visible-redemail></p>
          <p id=visible-redmessage></p>
          <button type="submit" class="btn btn-light messagebutton" id="contact-button">Send</button>
        </form>
      </div><!-- end form-group Message-->
      <!-- End Column 2 -->
    </div>
  </div>
  <%= image_tag("contact_map.png", class: "img-fluid map-img") %>
</div>
