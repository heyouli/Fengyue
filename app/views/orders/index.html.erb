<div class="order-content">
  <h1>Orders</h1>
  <div class="row order-table">
    <% @orders.each do |order| %>
      <% if order.product.present? %>
        <div class="col-sm">
          <h2><strong>Order # <%= order.id %></strong></h2>
          <h2><%= link_to order.product.name, order %></h2>
          <%= image_tag(order.product.image_url, class: "img-fluid order-img") %>
          <div class="order-description">
            <p><%= order.product.description if order.product %></p>
          </div>
          <div class="order-price">
            <strong>$ <%= order.product.price if order.product %></strong>
          </div>
        </div><!-- /col -->
      <% end %>
    <% end %>
  </div>
</div>
